{% extends 'base.html.twig' %}

{% block title %}New Grouppost{% endblock %}

{% block body %}
  <img src="https://cdn-icons-png.flaticon.com/512/10303/10303091.png"
                      alt=""
                      class="img-fluid  ml-35 "
                      style="width: 25px;" />
       <a href="{{ path('app_community_index') }}">back to list</a>


  <section class="mt-35 mb-100">
  <div class="container-fluid h-custom mt-175">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-md-3 col-lg-3 col-xl-3">
        {# <img src="..\img\addgrp.png" class="img-fluid" alt="" /> #}
        <img src="{{ asset('img/writePost.png') }}" class="img-fluid " />

      </div>
      <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
    <h5 class="mt-5">Create new Grouppost</h5>

       {{ form_start(form,{attr:{novalidate:'novalidate'}}) }}
          <div class="form-outline mb-4">
{{ form_widget(form.context, {'attr': {'class': 'form-control form-control-lg pb-100', 'placeholder': 'Write Something'}}) }}
{{ form_errors(form.context, {'attr': {'class': 'text-danger'}}) }}


            {# <label class="form-label" >context</label> #}
          </div>

     

          <div class="text-center text-lg-start mt-4 pt-2">
    <button class="btn btn-primary btn-lg"
              style="padding-left: 2.5rem; padding-right: 2.5rem;">{{ button_label|default('Save') }}</button>
          </div>
       {{ form_end(form) }}

      </div>
    </div>
  </div>
</section>

{% endblock %}
