{% extends 'base.html.twig' %}

{% block title %}Achievement index{% endblock %}

{% block body %}
<link rel="stylesheet" href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">


<!-- Latest compiled and minified CSS -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/rateYo/2.3.2/jquery.rateyo.min.css">

<!-- Latest compiled and minified JavaScript -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/rateYo/2.3.2/jquery.rateyo.min.js"></script>


<head>
	<title>rating</title>
	<link rel="stylesheet"
		type="text/css"
		href="jquery.rateyo.min.css">

<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/rateYo/2.3.2/jquery.rateyo.min.js"></script>
<link href="https://cdnjs.cloudflare.com/ajax/libs/rateYo/2.3.2/jquery.rateyo.min.css" rel="stylesheet"/>

</head>


<body>


    <h1>Achievement index</h1>






    <table class="table">
        <thead>
            <tr>
                {# <th>IdAchivement</th> #}
                <th>IdFreelancer</th>
                <th>IdOffer</th>
                <th>Rate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for achievement in achievements %}
            <tr>
                {# <td>{{ achievement.idAchivement }}</td> #}
                <td>{{ achievement.idFreelancer }}</td>
                <td>{{ achievement.idOffer }}</td>
                <td>{{ achievement.rate }}</td>
                <td>
                    <a href="{{ path('app_achievement_show', {'idAchivement': achievement.idAchivement}) }}">show</a>
                    <a href="{{ path('app_achievement_edit', {'idAchivement': achievement.idAchivement}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="stars">
       
       <i class="note">Note :</i>
    </div>

<div style="width: 600px; margin: 30px auto">
		<div id="rateYo"></div>
	</div>
	<script type="text/javascript"
			src="jquery.min.js"></script>
	<script type="text/javascript"
			src="jquery.rateyo.min.js"></script>
    





<a href="{{ path('app_achievement_new') }}">Create new</a>




<script>






document.querySelector('.note').innerHTML = 'Rating :' + {{final_rating|number_format(2) }};

var res = '{{ final_rating|number_format(2)  }}';
$("#rateYo").rateYo({
			rating: res,
			spacing: "10px",
			numStars: 10,
			minValue: 0,
			maxValue: 10,
			multiColor: {
 
      "startColor": "#FF0000", //RED
      "endColor"  : "#00FF00"  //GREEN
    }


		})

</script>

</body>



{% endblock %}
