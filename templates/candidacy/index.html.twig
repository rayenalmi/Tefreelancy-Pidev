{% extends 'base.html.twig' %}

{% block title %}Candidacy index{% endblock %}

{% block body %}
<h1>Candidacy index</h1>
<!-- Testimonial Start -->

<div class="container">
    <h1 class="text-center mb-5">List of candidacy!!!</h1>
    {% for candidacy in candidacies %}
    <div class="testimonial-item bg-light rounded p-4">
        <i class="fa fa-quote-left fa-2x text-primary mb-3"></i>
        <p>{{candidacy.message}}</p>
        <div class="d-flex align-items-center">
            <img class="img-fluid flex-shrink-0 rounded" src={{asset("img/testimonial-2.jpg")}}
                style="width: 50px; height: 50px;">
            <div class="ps-3">
                <h5 class="mb-1">{{candidacy.object}}</h5>
                {% if candidacy.accepted == 0 %}
                <small>Refused</small>
                 {% else %}
                 <small>Accepted</small>
                {% endif %}
                                
                            </div>
                        </div>
                    </div>
                    {% endfor %}

            </div>

            <!-- Testimonial End -->

            <table class="table">
                <thead>
                    <tr>
                        <th>IdCandidacy</th>
                        <th>Object</th>
                        <th>Message</th>
                        <th>Accepted</th>
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for candidacy in candidacies %}
                    <tr>
                        <td>{{ candidacy.idCandidacy }}</td>
                        <td>{{ candidacy.object }}</td>
                        <td>{{ candidacy.message }}</td>
                        <td>{{ candidacy.accepted ? 'Yes' : 'No' }}</td>
                        <td>
                            <a href="{{ path('app_candidacy_show', {'idCandidacy': candidacy.idCandidacy}) }}">show</a>
                            <a href="{{ path('app_candidacy_edit', {'idCandidacy': candidacy.idCandidacy}) }}">edit</a>
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="5">no records found</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>

            <a href="{{ path('app_candidacy_new') }}">Create new</a>
            {% endblock %}