{% extends 'base.html.twig' %}

{% block title %}Question{% endblock %}

{% block body %}
    <h1>Question</h1>

    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>IdQuestion</th>
                <td>{{ question.idQuestion }}</td>
            </tr>
            <tr>
                <th>Quest</th>
                <td>{{ question.quest }}</td>
            </tr>
            <tr>
                <th>Choice1</th>
                <td>{{ question.choice1 }}</td>
            </tr>
            <tr>
                <th>Choice2</th>
                <td>{{ question.choice2 }}</td>
            </tr>
            <tr>
                <th>Choice3</th>
                <td>{{ question.choice3 }}</td>
            </tr>
            <tr>
                <th>Response</th>
                <td>{{ question.response }}</td>
            </tr>
            <tr>
                <th>IdTest</th>
                <td>{{ question.idTest }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_question_index') }}" class="btn btn-secondary">Back to List</a>

    <a href="{{ path('app_question_edit', {'idQuestion': question.idQuestion}) }}" class="btn btn-primary">Edit</a>

    {{ include('question/_delete_form.html.twig') }}
{% endblock %}
