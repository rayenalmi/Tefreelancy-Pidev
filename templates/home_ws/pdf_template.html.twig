<!DOCTYPE html>
<html>
	<head>
		<style>
			table {
				width: 100%;
				max-width: 800px;
				margin: 0 auto;
				border: 2px solid black;
			}
			th,
			td {
				text-align: left;
				padding: 8px;
				border: 1px solid black;
			}
			th {
				background-color: #f2f2f2;
				font: bold;
			}
			.completed {
				color: green;
			}
		</style>

	</head>
	<body>
		{% set today = "now"|date('d-m-Y') %}
		<h1>Tefreelancy</h1>
		<p>Tunisia Tunis</p>
		<h2>Tasks Report</h2>
		<div>
			<p>To : Wassim Gouja</p>
			<p>Date:
				{{ today }}</p>
		</div>

		<table>
			<thead>
				<tr>
					<th>Task Title</th>
					<th>Description</th>
					<th>Status</th>
					<th>Deadline</th>
				</tr>
			</thead>
			<tbody>
				{% for task in tasks %}
					<tr>
						<td>{{ task.title }}</td>
						<td>{{ task.description }}</td>
						{% if task.completed == 1 %}
							<td class="completed">Done</td>
						{% else %}
							<td>In Progress</td>
						{% endif %}

						{% set deadline = task.deadline|date('d-m-Y') %}
						{% set difference = date(today).diff(date(deadline))%}
						{% set leftDays = difference.days %}
						{% if deadline == today %}
							<td>1 day left</td>
						{% else %}
							<td>{{ leftDays }}
								day(s) left</td>
						{% endif %}
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</body>

</html>
