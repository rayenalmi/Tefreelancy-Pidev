{% extends 'base.html.twig' %}

{% block title %}Workspace{% endblock %}

{% block body %}

<div class="row">
    <div class="col-md-6">
        <h1 class="mt-4 mb-4">Tasks</h1>

        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Deadline</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for task in tasks %}
                    <tr>
                        <td>{{ task.title }}</td>
                        <td>{{ task.deadline ? task.deadline|date('Y-m-d') : '' }}</td>
                        <td>
                            <a href="{{ path('app_task_show', {'id': task.id,'workspaceId': workspaceId}) }}" class="btn btn-info btn-sm">Show</a>
                            <a href="{{ path('app_task_edit', {'id': task.id,'workspaceId': workspaceId}) }}" class="btn btn-primary btn-sm">Edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">No tasks found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_addtask', {'id': workspaceId }) }}" class="btn btn-success">Create new task</a>
    </div>

    <div class="col-md-6">
        <h1 class="mt-4 mb-4">Posts</h1>

        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Content</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for publication_w in publication_ws %}
                    <tr>
                        <td>{{ publication_w.title }}</td>
                        <td>{{ publication_w.content }}</td>
                        <td>
                            <a href="{{ path('app_publication_ws_show', {'id': publication_w.id,'workspaceId': workspaceId}) }}" class="btn btn-info btn-sm">Show</a>
                            <a href="{{ path('app_publication_ws_edit', {'id': publication_w.id,'workspaceId': workspaceId}) }}" class="btn btn-primary btn-sm">Edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">No posts found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_addpost', {'id': workspaceId }) }}" class="btn btn-success">Create new post</a>
    </div>
</div>

{% endblock %}
