{% extends 'base.html.twig' %}

{% block title %}Test index{% endblock %}

{% block body %}
    <h1>Test index</h1>

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for test in tests %}
                    <tr>
                        <td>{{ test.idTest }}</td>
                        <td>{{ test.name }}</td>
                        <td>{{ test.type }}</td>
                        <td>
                            <a class="btn btn-primary btn-sm" href="{{ path('app_test_show', {'idTest': test.idTest}) }}">Show</a>
                            <a class="btn btn-secondary btn-sm" href="{{ path('app_test_edit', {'idTest': test.idTest}) }}">Edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">No records found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <a class="btn btn-success" href="{{ path('app_test_new') }}">Create new</a>
{% endblock %}
