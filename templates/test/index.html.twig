{% extends 'base.html.twig' %}

{% block title %}Test index{% endblock %}

{% block body %}
    <h1>Test index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdTest</th>
                <th>Name</th>
                <th>Type</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for test in tests %}
            <tr>
                <td>{{ test.idTest }}</td>
                <td>{{ test.name }}</td>
                <td>{{ test.type }}</td>
                <td>
                    <a href="{{ path('app_test_show', {'idTest': test.idTest}) }}">show</a>
                    <a href="{{ path('app_test_edit', {'idTest': test.idTest}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_test_new') }}">Create new</a>
{% endblock %}
