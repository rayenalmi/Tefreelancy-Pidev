{% extends 'base.html.twig' %}

{% block title %}
  Community
{% endblock %}

{% block body %}
  <h1>
    Community
  </h1>

  <table class="table">
    <tbody>
      <tr>
        <th>
          Name
        </th>
        <td>
          {{ community.name }}
        </td>
      </tr>
      <tr>
        <th>
          Description
        </th>
        <td>
          {{ community.description }}
        </td>
      </tr>
    </tbody>
  </table>

  <a href="{{ path('app_community_index') }}">back to list</a>

  <a href="{{
    path(
      'app_community_edit',
      {
        idCommunity: community.idCommunity
      }
    )
    }}">
    edit
  </a>

  {{ include('community/_delete_form.html.twig') }}
{% endblock %}
